extends ../templates/base

block content
    form(method="POST")
        if errorMessage
            div.error-box
                i.fas.fa-circle-xmark
                span=errorMessage
        div.input-box
            input(placeholder="Email",                    type="email",    name="email",     required)
        div.input-box
            input(placeholder="Username (need to login)", type="text",     name="username",  required)
        div.input-box
            input(placeholder="Name (profile name)",      type="text",     name="name",      required)
        div.input-box
            input(placeholder="Password",                 type="password", name="password",  required)
        div.input-box
            input(placeholder="Confirm Password",         type="password", name="password2", required)
        input(type="submit", value="Create Account")
        br
        hr
        br
        a.social-link.kakao-link(href="/user/kakaotalk/start") 
            div.kakao-login
                i.fas.fa-comment
                span Continue with KakaoTalk &rarr;
        a.social-link.github-link(href="/user/github/start") 
            div.github-login
                i.fab.fa-github
                span Continue with Github &rarr;
    div.sign-link 
        span Already have an account? 
        a(href="/login") Login &rarr;